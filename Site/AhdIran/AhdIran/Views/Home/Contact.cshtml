							<div class="form-group col-md-6">
								<label for="email">ایمیل</label>
								<input type="email" aria-required="true" name="widget-contact-form-email" required class="form-control required email" placeholder="ایمیل">
							</div>
						</div>
						<div class="row">
							<div class="form-group col-md-12">
								<label for="subject">موضوع</label>
								<input type="text" name="widget-contact-form-subject" required class="form-control required" placeholder="موضوع">
							</div>
						</div>
						<div class="form-group">
							<label for="message">پیام</label>
							<textarea type="text" name="widget-contact-form-message" required rows="5" class="form-control required" placeholder="پیام شما"></textarea>
						</div>
