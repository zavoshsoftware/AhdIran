@model ViewModels.HomeViewModel
@{
	ViewBag.Title = "وب سایت رسمی شرکت عهد ایرانیان";
	Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
	ViewBag.Canonical = "https://ahdiran.com";
}

<div id="slider" class="inspiro-slider" data-height-xs="360">
	<!-- Slide 1 -->
	@foreach (var slider in Model.Sliders)
	{
		<div class="slide" style="background-image:url('@slider.ImageUrl');">
			<div class="container">
				<div class="slide-captions text-light text-right">
					<!-- Captions -->
					<h1 data-caption-animation="rotateInUpLeft">@slider.Title</h1>
					<p data-caption-animation="rotateInUpLeft" data-caption-delay="300">@slider.Summery</p>
					<!-- end: Captions -->
				</div>
			</div>
		</div>
	}

</div>

<section class="background-colored text-dark p-b-40">
	<div class="container about-home">
		<div class="row">
			<div class="col-lg-4" data-animate="fadeInUp" data-animate-delay="100">
				<div class="heading-text heading-section">
					<h1 class="text-medium">@Model.Sec2Col1</h1>
				</div>
			</div>

			<div class="col-lg-4" data-animate="fadeInUp" data-animate-delay="300">
				@Html.Raw(Model.Sec2Col2)
			</div>

			<div class="col-lg-4" data-animate="fadeInUp" data-animate-delay="600">
				@Html.Raw(Model.Sec2Col3)
			</div>

		</div>
	</div>
</section>

<section class="text-light" style="background: transparent url(/images/polygon/1.jpg);">
	<div class="container features-box">
		<div class="row">
			<div class="col-lg-4" style="border-left:4px solid">
				<div data-animate="fadeIn">
					<div class="heading-text heading-section">
						<h1 class="text-medium">بهترین خدمات شایسته شما است</h1>
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				<div class="row">

					@foreach (var feature in Model.Features)
					{
						<div class="col-lg-6" data-animate="flipInY" data-animate-delay="100">
							<div class="icon-box effect small clean">
								<div class="icon">
									<a href="#"><i class="@feature.Name"></i></a>
								</div>
								<h3>@feature.Title</h3>
								<p>@feature.Summery</p>
							</div>
						</div>
					}

				</div>
			</div>
		</div>
	</div>
</section>

<section class="p-t-150 background-grey p-b-150">
	<div class="container home-customer">


		<div class="heading-text heading-section text-center">
			<span class="lead">مشتریان عهد ایرانیان</span>
		</div>
		<div class="carousel client-logos" data-items="6" data-items-sm="4" data-items-xs="3" data-items-xxs="2" data-margin="20" data-arrows="false" data-autoplay="true" data-autoplay="3000" data-loop="true">
			
