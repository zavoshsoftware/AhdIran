			{

				<li>
					<a data-content="@customer.Summery" title="" data-placement="top" data-toggle="popover" data-container="body" data-original-title="@customer.Title" data-trigger="hover">
						<img src="@customer.ImageUrl" alt="@customer.Title">
					</a>
				</li>
			}

		</ul>*@
	</div>

</section>

<section class="box-fancy section-fullwidth text-dark" style="  background: url(/images/11.jpg) no-repeat center center fixed; 
	                                                            -webkit-background-size: cover;
	                                                            -moz-background-size: cover;
	                                                            -o-background-size: cover;
	                                                            background-size: cover;">



	<div class="row text-center ">
		<h2 style="margin:0 auto">
			فرایند ثبت درخواست اینترنت پرسرعت برج ها
		</h2>
	</div>
	<div class="row">
		@foreach (var item in Model.Process)
		{

			<div class="col-lg-3 text-center">
				<h1 class="text-lg text-uppercase">@item.Name</h1>
				<h3>@item.Title</h3>
				<span>
@item.Summery				</span>
