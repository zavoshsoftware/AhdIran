<section>
	<div class="container blog-home">
		<div class="row">
			<div class="col-lg-4">
				<h4 class="m-b-20">ارائه بهترین خدمات</h4>

				<p class="lead">
@Html.Raw(Model.ServiceText)
				</p>
			</div>
			<div class="col-lg-4">
				<h4 class="m-b-20">ارزش های سازمانی ما</h4>
				<div class="accordion fancy radius clean">
					@{
						int j = 1;
						foreach (var value in Model.Values)
						{
							if (j == 1)
							{
								<div class="ac-item ac-active">
									<h5 class="ac-title"><i class="fa fa-rocket"></i>@value.Title</h5>
									<div class="ac-content ac-active">
								@value.Summery
								</div>
								</div>
							}
							else
							{
								<div class="ac-item">
									<h5 class="ac-title"><i class="fa fa-heart"></i>@value.Title</h5>
									<div class="ac-content">
										@value.Summery									</div>
								</div>
							}
							j++;
						}
					}
					
				
			 
				</div>
			</div>
			<div class="col-lg-4">
				<h4 class="m-b-20">آخرین مقالات</h4>
				<div class="post-thumbnail-list">

					@for (int i = 0; i < 4; i++)
					{

						<div class="post-thumbnail-entry">
							<img src="/images/corporate-v7/images/blog/5.jpg" alt="">
							<div class="post-thumbnail-content">
								<a href="#">راه اندازی نسل پنجم اینترنت</a>
								<span class="post-date"><i class="far fa-clock"></i> 4 روز پیش</span>
								<span class="post-category"><i class="fa fa-tag"></i> اخبار</span>
							</div>
						</div>
					}

				</div>
			</div>
		</div>
	</div>
</section>

